{
  "name": "@realdb/client",
  "version": "1.2.6",
  "description": "AWS-backed real-time database SDK for Node.js and browsers with Zod schema integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build && npm test",
    "size": "bundlesize"
  },
  "keywords": [
    "database",
    "real-time",
    "aws",
    "dynamodb",
    "appsync",
    "graphql",
    "sdk",
    "client",
    "typescript"
  ],
  "author": {
    "name": "Giles Fokam",
    "email": "giles.fokam@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilons/rdb.git",
    "directory": "sdk"
  },
  "bugs": {
    "url": "https://github.com/gilons/rdb/issues"
  },
  "homepage": "https://github.com/gilons/rdb/tree/main/sdk#readme",
  "peerDependencies": {
    "@apollo/client": "^3.8.0",
    "graphql": "^16.0.0"
  },
  "dependencies": {
    "aws-appsync-auth-link": "^3.0.7",
    "aws-appsync-subscription-link": "^3.1.2",
    "ky": "^1.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bundlesize": "^0.18.2",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50 kB"
    }
  ],
  "publishConfig": {
    "access": "public"
  }
}
