{
  "name": "rdb-nodejs-example",
  "version": "1.0.0",
  "description": "Real-time chat system example using @realdb/client SDK with WebSocket subscriptions and advanced filtering",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "chat:setup": "ts-node src/setup-chat.ts",
    "chat:listen": "ts-node src/chat-listen.ts",
    "chat:listen:filtered": "ts-node src/chat-listen-filtered.ts",
    "message:send": "ts-node src/message-send.ts",
    "message:edit": "ts-node src/message-edit.ts",
    "message:delete": "ts-node src/message-delete.ts"
  },
  "dependencies": {
    "@realdb/client": "1.3.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "rdb",
    "example",
    "nodejs",
    "typescript"
  ],
  "author": "RDB Team",
  "license": "MIT"
}
