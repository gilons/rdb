{
  "name": "@realdb/client",
  "version": "1.3.8",
  "description": "AWS-backed real-time database SDK for Node.js, browsers, and React Native with Zod schema integration",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build && npm test",
    "size": "bundlesize"
  },
  "keywords": [
    "database",
    "real-time",
    "aws",
    "dynamodb",
    "appsync",
    "graphql",
    "sdk",
    "client",
    "typescript",
    "react-native"
  ],
  "author": {
    "name": "Giles Fokam",
    "email": "gf.694765457@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilons/rdb.git",
    "directory": "sdk"
  },
  "bugs": {
    "url": "https://github.com/gilons/rdb/issues"
  },
  "homepage": "https://github.com/gilons/rdb/tree/main/packages/sdk#readme",
  "dependencies": {
    "ky": "^1.1.3",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bundlesize": "^0.18.2",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.0",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50 kB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "browser": {
    "ws": false
  },
  "react-native": {
    "ws": false
  }
}
